html
  head
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
    meta(charset='UTF-8')
    title Fon1us
    link(rel='stylesheet' href='/stylesheets/style.css')
    script(src='https://code.jquery.com/jquery-3.6.0.min.js')
    script(src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous")
  body
    .container2
      .jumbotron
        br
        input#name.form-control(placeholder='Name' type='text' name='name')
        br
        input#email.form-control(placeholder='Email' type='email' name='email')
        br
        input#password.form-control(placeholder='Password' type='text' name='password')
        br
        input#registr.btn.btn-light(value='Continue' type='button')
        
        
    .container1
      .jumbotron
        p.display-8 Fon1us
    
    #modalMessage(class="modal fade")
      div(class="modal-dialog")
        div(class="modal-content")
          div(class="modal-header")
            input(class="modal-title" name="message" id="messageId" value="")
    
    #someError(class="modal fade")
      div(class="modal-dialog")
        div(class="modal-content")
          div(class="modal-header")
            h4(class="modal-title") Some error
    
  script.
    $("#registr").click(() => {
      if ($("#name").val() == "" || $("#email").val() == "" || $("#password").val() == "") {
        $("#wrongPasswordOrLogin").modal("show");
      } else {
        $.ajax({
          url: "/registr",
          type: "POST",
          data: {
            name: $("#name").val(),
            email: $("#email").val(),
            password: $("#password").val()
          },
          success: function(data) {
            if (data.success == true) {
              $("#modalMessage").modal("show");
              $("#messageId").val("You have successfully registered! Confirm email!");
            }
            if(data.success == false) {
              $("#modalMessage").modal("show");
              $("#messageId").val(data.message);  
            } else {
                $("#someError").modal("show");
              } 
          } 
          
        });
      }
    })
    
    
  
  
  
    
