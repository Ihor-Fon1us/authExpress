  body
    .container2
      .jumbotron
        br
        form(action='/login' method='POST')
          br
          input.form-control(placeholder='Name' type='text' name='name')
          br
          input.form-control(placeholder='Password' type='text' name='password')
          br
          input.btn.btn-light(type='submit' value='Continue')
        
        button#register.btn.btn-link.btn-sm(type='button') Register
        button#forgotPassword.btn.btn-link.btn-sm(type='button') Forgot your password?
    .container1
      .jumbotron
        p Fon1us
    script.
      $("#register").click(() => {
        window.location.replace('/register');
      })
      $("#forgotPassword").click(() => {
        window.location.replace('/forgotPassword');
      })